{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "noEmit": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "rootDir": "."
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
