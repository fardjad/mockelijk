{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "resolveJsonModule": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "rootDir": ".",
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
